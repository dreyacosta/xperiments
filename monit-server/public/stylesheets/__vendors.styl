vendor(prop, args)
    -webkit-{prop} args
    -moz-{prop} args
    -ms-{prop} args
    -o-{prop} args
    {prop} args

vendorVal(prop, args)
    {prop} -webkit- + args
    {prop} -moz- + args
    {prop} -ms- + args
    {prop} -o- + args
    {prop} args

border-radius()
    vendor('border-radius', arguments)

box-shadow()
    vendor('box-shadow', arguments)

text-shadow()
    vendor('text-shadow', arguments)

background-image()
    vendor('background-image', arguments)

transition()
    vendor('transition', arguments)

transform()
    vendor('transform', arguments)

box-sizing()
    vendor('box-sizing', arguments)

text-size-adjust()
    vendor('text-size-adjust', arguments)

// Flex vendors

flexbox()
    vendorVal('display', 'flex')

flex-direction()
    vendor('flex-direction', arguments)

// X horizontal

flex-justify-content()
    vendor('justify-content', arguments)

// Y vertical

flex-align-items()
    vendor('align-items', arguments)

// Items properties

flex-align-self()
    vendor('align-self', arguments)

flex-anchor()
    vendor('flex', arguments)

flex-align-content()
    vendor('align-content', arguments)